@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_authLayout.cshtml";
}

<div class="container d-flex align-items-center justify-content-center vh-100 flex-column">
    <div class="d-flex align-items-center justify-content-center mb-4">
        <img class="Logo mr-3 grayscale" src="~/sentimentanalyzericon/emotions_423327.png" />
        <div class="sa">
            <h1 class="text-center font-weight-bolder line-1 ">Senalyzer</h1>
            <p class="text-center font-weight-bolder line-2">Sentiment Analyzer</p>
        </div>
    </div>
    <div class="row w-100">
        <div class="col-md-6 d-flex align-items-center justify-content-center">
            <img src="~/SentimentAnalyzerIcon/regist.png" class="img-fluid" alt="Sign In Image">
        </div>
        <div class="col-md-6 d-flex align-items-center justify-content-center">
            <div class="registration-container">
                <div class="heading">Sign In</div>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger" asp-validation-summary="All"> </div>
                }
                <form asp-action="SignIn">
                    <input class="input" asp-for="Email" type="email" name="email" id="email" placeholder="E-mail">
                    <input class="input" asp-for="Password" type="password" name="password" id="password" placeholder="Password">
                    <div class="form-check mt-3 ml-2">
                        <input asp-for="RememberMe" class="form-check-input">
                        <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
                    </div>
                    <span class="forgot-password font-weight-bold"><a asp-action="ForgetPassword">Forgot Password ?</a></span>
                    <input class="login-button btn btn-dark mt-3" type="submit" value="Sign In">
                </form>
                <div class="text-center mt-3">
                    <span class="forgot-password font-weight-bold"><a asp-action="SignUp">Create new account</a></span>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    h1{
        font-size: 2rem;
    }
    .Logo {
        width: 65px;
    }

    .grayscale {
        filter: grayscale(100%);
    }

    .sa {
        font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
    }

    /* New styles for navbar hover effect */
    .navbar-nav .nav-item .nav-link {
        transition: color 0.3s, background-color 0.3s;
    }

        .navbar-nav .nav-item .nav-link:hover {
            color: #ffffff; /* Change text color on hover */
            background-color: #f6f6f6; /* Change background color on hover */
            border-radius: 4px; /* Optional: add rounded corners */
        }


    .text-container {
        display: flex;
        flex-direction: column;
        align-items: flex-start; /* Aligns text to the left of the container */
        margin-left: 10px; /* Adds some space between the logo and the text */
    }

    .line-1, .line-2 {
        margin: 0; /* Removes default margin */
        font-family: "Trebuchet MS", Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
    }

    .line-1 {
        margin-bottom: -5px; /* Adjusts space between the two lines */
    }

    .line-2 {
        margin-top: -2px; /* Adjusts space between the two lines */
    }


    .container {
        max-width: 100%;
    }

    .registration-container {
        width: 100%;
        max-width: 400px;
    }

    .input {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    .login-button {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
    }

    .heading {
        font-size: 24px;
        margin-bottom: 20px;
    }

    .forgot-password {
        display: block;
        margin-top: 10px;
    }

    .vh-100 {
        min-height: 100vh;
    }
    body{
        margin: 0 ;

    }
</style>



