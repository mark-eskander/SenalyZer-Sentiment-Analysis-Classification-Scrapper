        display: block;
    }

    #content2:target {
        display: block;
    }

        #content2:target ~ #content1 {
            display: none;
        }

    .content h2 {
        color: #000;
    }

    .togglebuttons a {
        text-decoration: none;
        color: white;
    }

    .wrapper {
        --font-color-dark: #323232;
        --font-color-light: #fff;
        --bg-color: #fff;
        --main-color: #323232;
        --secondary-color: #505050;
        position: relative;
        width: 650px;
        height: 36px;
        background-color: var(--bg-color);
        border: 2px solid var(--main-color);
        border-radius: 34px;
        display: flex;
        flex-direction: row;
        box-shadow: 4px 4px var(--main-color);
    }

        .wrapper .option {
            margin-right: 5px;
            flex: 1;
            height: 28px;
            position: relative;
            top: 2px;
            left: 2px;
            border-radius: 34px;
            transition: 0.25s cubic-bezier(0, 0, 0, 1);
